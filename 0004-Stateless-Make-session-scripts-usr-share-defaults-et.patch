     $SHELL --login -c "/bin/sh -c 'export -p' > $xsess_tmp"
@@ -46,6 +49,7 @@ case $SHELL in
     rm -f $xsess_tmp
     ;;
   *) # Plain sh, ksh, and anything we do not know.
+    [ -f /usr/share/defaults/etc/profile ] && . /usr/share/defaults/etc/profile
